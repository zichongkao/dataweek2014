<script>
    var map;
    var nycCenter = new google.maps.LatLng(40.758895, -73.985131);
    var timesSquare = new google.maps.LatLng(40.7703691, -73.9425825);
    var videoId = ["fFDh-I6XIXA", "9QzbQlY85fs", "XS6ysDFTbLU"];

    function initialize() {
        var mapOptions = {
            zoom: 12,
            center: nycCenter
        };
        map = new google.maps.Map(document.getElementById('map-canvas'),
        mapOptions);
        var marker0 = new google.maps.Marker({
            position: nycCenter,
            map: map,
            title: "center"
        });
        var marker1 = new google.maps.Marker({
            position: timesSquare,
            map: map,
            title: "timessquare"
        });

        var markers = [marker0, marker1];
        var d = new Date();

        google.maps.event.addListener(markers[0], 'click', function() {
            //map.setZoom(15);
            map.setCenter(markers[0].getPosition());
            document.getElementById('video1').src = "//www.youtube.com/embed/" + videoId[1] + "?autoplay=1&showinfo=0&controls=0&loop=1&playlist=" + videoId[1];

        });

        google.maps.event.addListener(markers[1], 'click', function() {
            //map.setZoom(15);
            map.setCenter(markers[1].getPosition());
            document.getElementById('video2').src = "//www.youtube.com/embed/" + videoId[2] + "?autoplay=1&showinfo=0&controls=0&loop=1&playlist=" + videoId[2];
        });
    }

    google.maps.event.addDomListener(window, 'load', initialize);

    pubnub.subscribe({
        channel: 'countChannel',
        message: function(msg) {
            var count = Math.random() * (100 - 0) + 0;
            var curr_t = Math.floor(Date.now() / 1000);
            var object = [{
                time: curr_t,
                y: count
            }];
            EPOCH_OBJECTS.area.push(object);
        },
        connect: function() {
            console.log("Connected")
        },
        disconnect: function() {
            console.log("Disconnected")
        },
        reconnect: function() {
            console.log("Reconnected")
        },
        error: function() {
            console.log("Network Error")
        },
    });

    var start_t = Math.floor(Date.now() / 1000);
    chartData = [{
        time: start_t,
        y: 100
    }];

    // initializing stuff

    var EPOCH_OBJECTS = {
        area: $("#area").epoch({
            type: "time.area",
            data: [{
                values: chartData
            }]
        })
    };
</script>